{
  "name": "hyperliquid-alert",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "ioredis": "^5.8.2",
    "mathjs": "^15.1.0",
    "node-cron": "^4.2.1",
    "node-telegram-bot-api": "^0.66.0",
    "pino": "^10.1.0",
    "technicalindicators": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "ws": "^8.18.3"
  },
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "yarn build && node dist/index.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:rebuild": "docker-compose up -d --build",
    "docker:dual:up": "docker-compose -f docker-compose.dual-model.yml up -d",
    "docker:dual:down": "docker-compose -f docker-compose.dual-model.yml down",
    "docker:dual:logs": "docker-compose -f docker-compose.dual-model.yml logs -f",
    "docker:dual:build": "docker-compose -f docker-compose.dual-model.yml up -d --build",
    "docker:prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:prod:status": "docker-compose -f docker-compose.prod.yml ps",
    "deploy:build": "./deploy.sh build",
    "deploy:push": "./deploy.sh build",
    "deploy:prod": "./deploy.sh deploy",
    "deploy:full": "./deploy.sh full",
    "intraday:start": "npm run build && node dist/intradayMain.js start",
    "intraday:5m": "npm run build && node dist/intradayMain.js start 5m",
    "intraday:15m": "npm run build && node dist/intradayMain.js start 15m",
    "intraday:1h": "npm run build && node dist/intradayMain.js start 1h",
    "intraday:test": "npm run build && node dist/intradayMain.js test",
    "intraday:backtest": "npm run build && node dist/intradayMain.js backtest"
  },
  "devDependencies": {
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/ws": "^8.18.1"
  }
}
